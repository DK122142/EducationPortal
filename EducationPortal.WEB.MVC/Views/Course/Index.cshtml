@using System.Security.Claims
@model EducationPortal.WEB.MVC.ViewModels.IndexCoursesViewModel

@addTagHelper *, EducationPortal.WEB.MVC

@{
    ViewData["Title"] = "Courses";
}

<h1>@ViewData["Title"]</h1>

<div>
    @if (User.Identity.IsAuthenticated)
    {
        <div>
            <div class="my-2">
                <form method="get" asp-controller="Course" asp-action="Create">
                    <div>
                        <input type="submit" value="Create course" class="btn btn-secondary" />
                    </div>
                </form>
            </div>
        </div>
    }
    <div>
        <table class="table">
            <tr><th>Name</th><th>Description</th><th>Materials</th><th>Skills</th><th></th></tr>
            @foreach (var item in Model.Courses)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@string.Join(",", item.MaterialNames)</td>
            <td>@string.Join(",", item.SkillNames)</td>
            @if (User.Identity.IsAuthenticated)
            {
                if (item.JoinedProfilesId.Contains(User.FindFirst(ClaimTypes.NameIdentifier).Value))
                {

                    <td>
                        <form asp-controller="User" asp-action="CompleteCourse" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-success">
                                Complete
                            </button>
                        </form>
                    </td>
                }
                else if(item.CompletedProfilesId.Contains(User.FindFirst(ClaimTypes.NameIdentifier).Value))
                {
                    <td>
                        PASSED
                    </td>
                }
                else
                {
                    <td>
                        <form asp-controller="User" asp-action="JoinToCourse" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-primary">
                                Join
                            </button>
                        </form>
                    </td>
                }
            }
        </tr>
            }
        </table>
    </div>
    <div>
        <page-link page-model="Model.PageViewModel" page-action="Index"></page-link>
    </div>
</div>