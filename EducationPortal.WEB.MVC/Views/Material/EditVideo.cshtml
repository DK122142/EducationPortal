@model EducationPortal.WEB.MVC.Models.VideoModel

@{
    ViewData["Title"] = "Video";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div>
        <form asp-action="EditVideo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Source"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Quality"></label>
                <input asp-for="Quality" class="form-control" />
                <span asp-validation-for="Quality" class="text-danger"></span>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div>
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            }
        </form>
    </div>
</div>