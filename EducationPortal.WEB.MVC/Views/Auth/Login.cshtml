@model EducationPortal.WEB.MVC.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log In";
}
<h1>@ViewData["Title"]</h1>

<div>
    <form asp-antiforgery="true" asp-controller="Auth" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Login"></label>
                <input type="text" asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="flexCheckDefault"/>
                <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault">
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>